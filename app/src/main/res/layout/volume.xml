<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?attr/radio_frag_top_bottom_color"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/img_volume_max"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_volume" />

    <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
        android:layout_width="wrap_content"
        android:layout_height="170dp">

        <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar
            android:id="@+id/seek_bar_volume"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:seekBarRotation="CW270"
            android:thumbTint="@color/text_color_light"
            android:progressTint="?attr/main_text_color"
            android:progressBackgroundTint="@color/white" />
    </com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>

    <ImageView
        android:id="@+id/img_volume_min"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_volume_off" />

</LinearLayout>