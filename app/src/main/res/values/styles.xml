<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary</item>
        <item name="colorAccent">@color/color_primary</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="AppThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary</item>
        <item name="colorAccent">@color/color_primary</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:navigationBarColor">@color/color_primary</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <!--        custom item-->
        <item name="main_text_color">@color/text_color</item>
        <item name="secondary_text_color">@color/text_color_light</item>
        <item name="line_color">@color/line_color</item>
        <item name="background_color">@color/color_primary</item>
        <item name="radio_background_color">@color/color_primary</item>
        <item name="radio_frag_top_bottom_color">@color/bg_screen3</item>
        <item name="radio_frag_stand_color">@color/black</item>
        <item name="black_white">@color/black</item>
        <item name="black_white_reverse">@color/white</item>
        <item name="track_color">@color/track_tint</item>
        <item name="thumb_color">@color/thumb_tint</item>
        <item name="track_color_active">@color/track_tint_active</item>
        <item name="thumb_color_active">@color/thumb_tint_active</item>
    </style>
    <style name="AppThemeLightRadio" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary</item>
        <item name="colorAccent">@color/color_primary</item>
        <item name="android:statusBarColor">@color/bg_screen3</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:navigationBarColor">@color/bg_screen3</item>

        <!--        custom item-->
        <item name="main_text_color">@color/text_color</item>
        <item name="secondary_text_color">@color/text_color_light</item>
        <item name="line_color">@color/line_color</item>
        <item name="background_color">@color/color_primary</item>
        <item name="radio_background_color">@color/color_primary</item>
        <item name="radio_frag_top_bottom_color">@color/bg_screen3</item>
        <item name="radio_frag_stand_color">@color/black</item>
        <item name="black_white">@color/black</item>
        <item name="black_white_reverse">@color/white</item>
        <item name="track_color">@color/track_tint</item>
        <item name="thumb_color">@color/thumb_tint</item>
        <item name="track_color_active">@color/track_tint_active</item>
        <item name="thumb_color_active">@color/thumb_tint_active</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/text_color</item>
        <item name="colorPrimaryDark">@color/text_color</item>
        <item name="colorAccent">@color/text_color</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:navigationBarColor">@color/text_color</item>

        <item name="main_text_color">@color/color_primary</item>
        <item name="secondary_text_color">@color/text_color_light_dark</item>
        <item name="line_color">@color/line_color_dark</item>
        <item name="background_color">@color/text_color</item>
        <item name="radio_background_color">@color/radio_bg_dark</item>
        <item name="radio_frag_top_bottom_color">@color/text_color</item>
        <item name="radio_frag_stand_color">@color/bg_screen3</item>
        <item name="black_white">@color/white</item>
        <item name="black_white_reverse">@color/black</item>
        <item name="track_color">@color/track_tint_dark</item>
        <item name="thumb_color">@color/thumb_tint_dark</item>
        <item name="track_color_active">@color/track_tint_active_dark</item>
        <item name="thumb_color_active">@color/thumb_tint_active_dark</item>
    </style>

    <style name="Theme.statusBarTransparent" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:ignore="NewApi">shortEdges</item>
    </style>
    <style name="MyAlertDialogStyle" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:title">@color/text_color</item>
        <item name="background">@color/white</item>
    </style>
</resources>
